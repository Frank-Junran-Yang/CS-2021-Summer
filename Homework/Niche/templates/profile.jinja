{% extends 'base.jinja' %}

{% block title %}Register Page{% endblock %}

{% block body %}

<div class="row">
    {% for school in schools %}
        <div class="col-sm-4">
            <div class="card">
            <img src="{{url_for('static', filename = '{}.jpg'.format(school[0]))}}" class="card-img-top" alt="..." object-fit= cover; width="300" height="300">
            <div class="card-body">
                <h5 class="card-title">{{school[0]}}</h5>
                {# <h6 class="card-text">Rank {{school}}</h6> #}
                <a href="{{url_for('{}'.format(school[1]),schoolname=school[0])}}" class="btn btn-primary">See The School</a>
            </div>
            </div>
        </div>
    {% endfor %}
    

</div>

{% endblock %}